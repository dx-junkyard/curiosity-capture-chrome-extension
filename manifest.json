{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Personal Interest Tracker",
  "permissions": [
    "storage",
    "activeTab",
    "background",
    "microphone"
  ],
  "host_permissions": [
    "http://localhost:5000/",
    "ws://localhost:5000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
